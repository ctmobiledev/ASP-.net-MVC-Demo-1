                                <div class="stripe-color" style="background-color:white; color:white;"></div>
                            </div>
                        </td>
                   </tr>
                    <tr>
                        <td>Band 3</td>
                        <td class="color-text-box">@Html.TextBoxFor(model => model.bandCColor, htmlAttributes: new { id = "txtBandC", Class = "color-text-box" })</td>
                        <td>
                            <div style="height: 30px;">
                                <div onclick="pickColor('white', 'txtBandC');" class="stripe-color" style="background-color:white; color:black;">white</div>
                                <div onclick="pickColor('gray', 'txtBandC');" class="stripe-color" style="background-color:gray; color:black;">gray</div>
                                <div onclick="pickColor('violet', 'txtBandC');" class="stripe-color" style="background-color:violet; color:white;">violet</div>
