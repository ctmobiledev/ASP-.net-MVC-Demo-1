                                <div onclick="pickColor('none', 'txtBandD');" class="stripe-color" style="background-color:white; color:black;">none</div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="submit" value="Calculate" class="btn btn-primary btn-lg" style="margin-top: 20px;" /></td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>
            </div>

            <div id="txtOhmsOut" runat="server" style="font-size: 30pt;">
                @ViewBag.ResistorOhms, @ViewBag.ResistorTolerance 
            </div>

        }

    </div>

    <script>

        // on first view as well as refresh

        document.getElementById('txtBandA').style.backgroundColor = "@ViewBag.vb_BandA_Color";
        if (document.getElementById('txtBandA').style.backgroundColor == "black") {
            document.getElementById('txtBandA').style.color = 'white';
        } else {
