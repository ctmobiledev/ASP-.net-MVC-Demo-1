                                <div onclick="pickColor('pink', 'txtBandC');" class="stripe-color" style="background-color:pink; color:black;">pink</div>
                                <div class="stripe-color" style="background-color:white; color:white;"></div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>Band 4</td>
                        <td class="color-text-box">@Html.TextBoxFor(model => model.bandDColor, htmlAttributes: new { id = "txtBandD", Class = "color-text-box" })</td>
