                                <div onclick="pickColor('green', 'txtBandB');" class="stripe-color" style="background-color:green; color:white;">green</div>
                                <div onclick="pickColor('yellow', 'txtBandB');" class="stripe-color" style="background-color:yellow; color:black;">yellow</div>
                                <div onclick="pickColor('orange', 'txtBandB');" class="stripe-color" style="background-color:orange; color:black;">orange</div>
                                <div onclick="pickColor('red', 'txtBandB');" class="stripe-color" style="background-color:red; color:white;">red</div>
                                <div onclick="pickColor('brown', 'txtBandB');" class="stripe-color" style="background-color:brown; color:white;">brown</div>
                                <div onclick="pickColor('black', 'txtBandB');" class="stripe-color" style="background-color:black; color:white;">black</div>
                                <div class="stripe-color" style="background-color:white; color:white;"></div>
                                <div class="stripe-color" style="background-color:white; color:white;"></div>
