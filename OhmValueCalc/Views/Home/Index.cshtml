@model OhmValueCalc.Models.ResistorModel

@{
    ViewBag.Title = "Candidate: Charles Tatum II";
}

<div>
    <h1>Ohm Value Calculator</h1>

    <p class="lead">
    This is a demonstration of a electronic color calculator for resistors using the ASP.NET MVC platform.
        <br />
    Set the color bands by clicking the color swatch names below, then click on Calculate for resulting values.
    </p>

    <script>

        function pickColor(color, id) {
            console.log('color = ' + color + ', id = ' + id);

            document.getElementById(id).value = color;

            if (color == 'black') {
                document.getElementById(id).style.backgroundColor = color;
                document.getElementById(id).style.color = 'white';
            } else {
                document.getElementById(id).style.backgroundColor = color;
                document.getElementById(id).style.color = 'black';
            }

        }


    </script>

