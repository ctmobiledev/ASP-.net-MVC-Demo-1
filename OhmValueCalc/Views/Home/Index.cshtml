                                <div onclick="pickColor('green', 'txtBandA');" class="stripe-color" style="background-color:green; color:white;">green</div>
                                <div onclick="pickColor('yellow', 'txtBandA');" class="stripe-color" style="background-color:yellow; color:black;">yellow</div>
                                <div onclick="pickColor('orange', 'txtBandA');" class="stripe-color" style="background-color:orange; color:black;">orange</div>
                                <div onclick="pickColor('red', 'txtBandA');" class="stripe-color" style="background-color:red; color:white;">red</div>
                                <div onclick="pickColor('brown', 'txtBandA');" class="stripe-color" style="background-color:brown; color:white;">brown</div>
                                <div onclick="pickColor('black', 'txtBandA');" class="stripe-color" style="background-color:black; color:white;">black</div>
                                <div class="stripe-color" style="background-color:white; color:white;"></div>
                                <div class="stripe-color" style="background-color:white; color:white;"></div>
                                <div class="stripe-color" style="background-color:white; color:white;"></div>
                                <div class="stripe-color" style="background-color:white; color:white;"></div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>Band 2</td>
                        <td class="color-text-box">@Html.TextBoxFor(model => model.bandBColor, htmlAttributes: new { id = "txtBandB", Class = "color-text-box" })</td>
                        <td>
                            <div style="height: 30px;">
                                <div onclick="pickColor('white', 'txtBandB');" class="stripe-color" style="background-color:white; color:black;">white</div>
                                <div onclick="pickColor('gray', 'txtBandB');" class="stripe-color" style="background-color:gray; color:black;">gray</div>
